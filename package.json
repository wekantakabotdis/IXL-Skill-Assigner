{
  "name": "ixl-skill-assigner",
  "version": "1.0.0",
  "description": "Automated skill assignment tool for IXL",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:electron\"",
    "dev:backend": "nodemon backend/server.js",
    "dev:frontend": "vite",
    "dev:electron": "wait-on http://localhost:5174 && electron .",
    "build": "vite build",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run build && electron-builder --mac",
    "package:mac:x64": "npm run build && electron-builder --mac --x64",
    "package:mac:arm64": "npm run build && electron-builder --mac --arm64",
    "package:mac:all": "npm run build && electron-builder --mac --x64 --arm64",
    "package:win": "npm run build && electron-builder --win",
    "start": "electron ."
  },
  "keywords": [
    "ixl",
    "education",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "cors": "^2.8.5",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "function-bind": "^1.1.2",
    "playwright": "^1.40.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.ixl.skill-assigner",
    "productName": "IXL Skill Assigner",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "backend/**/*",
      "dist/**/*",
      "package.json",
      "!dist/*.dmg",
      "!dist/*.blockmap",
      "!dist/mac/**/*",
      "!dist/mac-arm64/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/playwright/.local-browsers",
        "to": "playwright-browsers",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.education",
      "icon": "build/icons/mac/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icons/win/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
